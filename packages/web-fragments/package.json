{
	"name": "web-fragments",
	"description": "",
	"type": "module",
	"exports": {
		"./gateway": {
			"import": "./src/gateway/fragment-gateway.ts"
		},
		"./gateway/web": {
			"import": "./src/gateway/middleware/web.ts"
		},
		"./gateway/node": {
			"import": "./src/gateway/middleware/node.ts"
		},
		"./elements": {
			"import": "./src/elements/index.ts"
		},
		"./utils": {
			"import": "./src/gateway/utils/host-utils.ts"
		}
	},
	"publishConfig": {
		"exports": {
			"./gateway": {
				"import": "./dist/gateway.js",
				"types": "./dist/gateway/index.d.ts"
			},
			"./elements": {
				"import": "./dist/elements.js",
				"types": "./dist/elements/index.d.ts"
			},
			"./gateway/web": {
				"import": "./dist/gateway/web.js",
				"types": "./dist/gateway/web.d.ts"
			},
			"./gateway/node": {
				"import": "./dist/gateway/node.js",
				"types": "./dist/gateway/node.d.ts"
			}
		}
	},
	"version": "0.1.1",
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"types:elements": "tsc -p src/elements",
		"types:gateway": "tsc -p src/gateway",
		"types:root": "tsc -p .",
		"types:check": "pnpm types --noEmit --emitDeclarationOnly false",
		"types": "pnpm run --filter web-fragments --parallel \"/^types:(?!check).*/\""
	},
	"dependencies": {
		"htmlrewriter": "latest",
		"reframed": "workspace:*"
