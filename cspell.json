{
	"version": "0.2",
	"ignorePaths": [
		"pnpm-lock.yaml",
		"**/*.svg",
		// cspell doesn't support negative glob so we have to list all docs dirs explicitly
		"/docs/astro.config.ts",
		"/docs/package.json",
		"/docs/src/components/**",
		"/docs/src/layouts/**"
	],
	"useGitignore": true,
	"dictionaryDefinitions": [
		{
			"name": "wf-dictionary",
			"path": "./.cspell/wf-dictionary.txt",
			"addWords": true
		}
	],
	"dictionaries": ["wf-dictionary"],
	"ignoreWords": [],
	"import": []
}
